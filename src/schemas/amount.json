{
  "$id": "https://example.com/amount.schema.json",
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "AMOUNT_VALIDATION",
  "type": "object",
  "properties": {
    "amount": {
      "type": "object",
      "properties": {
        "currency": {
          "type": "string",
          "comment": "e.g. AMD, the type may be enum"
        },
        "value": {
          "type": "number",
          "multipleOf": 0.01,
          "exclusiveMinimum": 0
        }
      },
      "required": [
        "value"
      ]
    }
  },
  "additionalProperties": false
}
